{
  "name": "ito-server",
  "version": "1.0.0",
  "main": "dist/index.js",
  "type": "module",
  "license": "GPL-3.0-only",
  "dependencies": {
    "@aws-sdk/client-cloudwatch-logs": "^3.723.0",
    "@aws-sdk/client-s3": "^3.879.0",
    "@bufbuild/buf": "^1.55.1",
    "@bufbuild/protobuf": "^2.5.2",
    "@bufbuild/protoc-gen-es": "^2.5.2",
    "@bufbuild/protovalidate": "^0.6.0",
    "@cerebras/cerebras_cloud_sdk": "^1.46.0",
    "@connectrpc/connect": "^2.0.2",
    "@connectrpc/connect-fastify": "^2.0.2",
    "@connectrpc/connect-node": "^2.0.2",
    "@connectrpc/protoc-gen-connect-es": "^1.6.1",
    "@fastify/cors": "^11.1.0",
    "config": "^4.0.0",
    "dotenv": "^16.5.0",
    "fastify": "^5.4.0",
    "groq-sdk": "^0.26.0",
    "node-pg-migrate": "^8.0.3",
    "pg": "^8.16.3",
    "stripe": "^19.2.0",
    "uuid": "^11.1.0",
    "jose": "^5.2.0",
    "zod": "^4.0.5"
  },
  "scripts": {
    "build": "bunx tsc",
    "clean": "rm -rf node_modules dist",
    "start": "bun dist/index.js",
    "proto:gen:server": "bunx buf generate --output=./src src/ito.proto && bunx buf generate --output=./src buf.build/bufbuild/protovalidate",
    "proto:gen:client": "bunx buf generate --output=../app src/ito.proto && bunx buf generate --output=../app buf.build/bufbuild/protovalidate && cd .. && bun run format:fix:app",
    "proto:gen": "bun run proto:gen:server && bun run proto:gen:client",
    "db:migrate:create": "node-pg-migrate --migrations-dir src/migrations --migration-file-language js create",
    "db:migrate": "bash ./scripts/migrate.sh up",
    "db:migrate:down": "bash ./scripts/migrate.sh down",
    "docker": "docker compose up --build",
    "local-db-up": "docker compose up -d db",
    "local-db-down": "docker compose stop db",
    "local-s3-up": "docker compose up -d minio && sleep 3 && bash ./scripts/setup-minio.sh",
    "local-s3-down": "docker compose stop minio",
    "local-services-up": "bun local-db-up && bun local-s3-up",
    "local-services-down": "bun local-db-down && bun local-s3-down",
    "dev": "tsx watch src/index.ts",
    "dev:win": "bun --watch src/index.ts",
    "test-client": "tsx ./test-client.ts",
    "migrate-audio-to-s3": "tsx scripts/migrate-audio-to-s3.ts"
  },
  "devDependencies": {
    "@types/express": "^5.0.3",
    "@types/node": "^24.0.1",
    "@types/pg": "^8.15.4",
    "@types/uuid": "^10.0.0",
    "dotenv-cli": "^8.0.0",
    "prettier": "^3.5.3",
    "ts-node": "^10.9.2",
    "tsx": "^4.20.2",
    "typescript": "^5.8.3"
  }
}
